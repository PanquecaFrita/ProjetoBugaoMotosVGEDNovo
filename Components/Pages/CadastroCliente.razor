@page "/CadastroCliente"
@rendermode InteractiveServer

@using AppBugaoMotoFVLE.Components.Models;
@inject ClienteDAO clienteDao;
@inject NavigationManager Navigation;

@if (erro != null)

{
    <div class="alert alert-danger">
        @erro
    </div>
}

<div class="breadcrumb ">
    <a href="#">Home</a> > <a href="#">Cadastrar: Cliente</a>
</div>



<div class="border p-4 rounded">

    <div class="border-left">
        <h3>Cadastro do cliente</h3>
        <p>Preencha todas as informações corretamente</p>
    </div>


    <EditForm Model="_novoCliente" OnSubmit="Salvar">
    <input @bind-value="_novoCliente!.Nome"  type="text" placeholder="Nome">
    <div class="row">
        <div><input @bind-value="_novoCliente!.Telefone" type="text" placeholder="Telefone"></div>
        <div><input @bind-value="_novoCliente!.Cpf" type="text" placeholder="CPF"></div>
    </div>

    <div class="divider"></div>

    <div class="row-3">
        <div><input @bind-value="_novoCliente!.Cep" type="text" placeholder="CEP"></div>
        <div>
            <input @bind-value="_novoCliente!.Estado" type="text" placeholder="Estado">
        </div>
        <div>
            <input @bind-value="_novoCliente!.Cidade" type="text" placeholder="Cidade">
        </div>
    </div>

    <div class="row">
        <div><input @bind-value="_novoCliente!.Rua"  type="text" placeholder="Rua"></div>
        <div><input @bind-value="_novoCliente!.Bairro" type="text" placeholder="Bairro"></div>
    </div>

    <textarea rows="4" placeholder="Complemento">@_novoCliente.Complemento </textarea>

    <div class="buttons">
        <button type="submit" class="btn-salvar">Salvar</button>
        <button class="btn-deletar">Deletar</button>

    </div>
    </EditForm>
</div>


@code {
    private string? erro = null;

    [SupplyParameterFromForm]

    private Cliente? _novoCliente { get; set; } = new Cliente();



    private void Salvar()
    {
        try
        {
            if (_novoCliente.Cpf is null || _novoCliente.Cpf == "")
            {

                throw new Exception("O campo CPF é obrigatório");

            }
            clienteDao.InserirCliente(_novoCliente);
            Navigation.NavigateTo("/ConsultaCliente");
        }
        catch (Exception ex)
        {
            erro = ex.Message;
        }

    }
}
